{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "version": "1.0.0",
  "description": "自動抓取嘉里大榮物流單並支援合併列印",
  "author": "DK0124",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://bvshop-manage.bvshop.tw/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://bvshop-manage.bvshop.tw/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "libs/pdf.js",
        "libs/pdf.worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
