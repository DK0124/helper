{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "description": "自動整合物流單與出貨明細，支援自訂格式與批次列印",
  "version": "2.3.0",
  "author": "DK0124",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.7-11.com.tw/*",
    "*://*.family.com.tw/*",
    "*://*.famiport.com.tw/*",
    "*://*.hilife.com.tw/*",
    "*://*.okmart.com.tw/*",
    "*://*.bvshop.tw/*",
    "*://bvshop-manage.bvshop.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.7-11.com.tw/*",
        "*://*.family.com.tw/*",
        "*://*.famiport.com.tw/*",
        "*://*.hilife.com.tw/*",
        "*://*.okmart.com.tw/*",
        "*://*.bvshop.tw/*",
        "*://bvshop-manage.bvshop.tw/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "BV SHOP 出貨助手"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon-16.png",
        "icons/icon-48.png",
        "icons/icon-128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
