{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "version": "2.0.1",
  "description": "自動抓取嘉里大榮物流單",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"    
  ],
  
  "host_permissions": [
    "https://bvshop-manage.bvshop.tw/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://bvshop-manage.bvshop.tw/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "BV SHOP 出貨助手"
  }
}
