{
  "manifest_version": 3,
  "name": "BV SHOP 出貨助手",
  "version": "2.2.0",
  "description": "BV SHOP 物流單與出貨明細列印助手 - 支援物流編號智慧配對",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.7-11.com.tw/*",
    "https://*.family.com.tw/*",
    "https://*.famiport.com.tw/*",
    "https://*.hilife.com.tw/*",
    "https://*.okmart.com.tw/*",
    "https://*.bvshop.tw/*",
    "http://*.bvshop.tw/*",
    "https://bvshop.tw/*",
    "http://bvshop.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "BV SHOP 出貨助手",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.7-11.com.tw/*",
        "https://*.family.com.tw/*",
        "https://*.famiport.com.tw/*",
        "https://*.hilife.com.tw/*",
        "https://*.okmart.com.tw/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon-16.png", "icons/icon-48.png", "icons/icon-128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
